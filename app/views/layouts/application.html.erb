<!DOCTYPE html>
<html>
  <head>
    <title>PetMessenger</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="ui inverted segment">
         <div class="ui inverted secondary pointing menu">
            <%=link_to "Home", root_path, class: "active item" %>
            <a class="item">
            Messages
            </a>
            <a class="item">
            Friends
            </a>
            <div class="right item p-0">
             <% if (is_logged) %>
                <%= link_to "Logout", logout_path, method: :delete, class: "item" %>
                <% else %>
                <%= link_to "Log in", login_path, class: "item" %>
                <a class="right item">Sign Up</a>
                <% end %>            
            </div>
        </div>
    </div>
    <div class="ui container">
        <%= render 'layouts/messages' %>
        <%= yield %>
    </div>
  </body>
</html>
